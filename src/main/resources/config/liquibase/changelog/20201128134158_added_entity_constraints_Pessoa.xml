<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Pessoa.
    -->
    <changeSet id="20201128134158-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="contato_id"
                                 baseTableName="pessoa"
                                 constraintName="fk_pessoa_contato_id"
                                 referencedColumnNames="id"
                                 referencedTableName="contato"/>

        <addForeignKeyConstraint baseColumnNames="endereco_id"
                                 baseTableName="pessoa"
                                 constraintName="fk_pessoa_endereco_id"
                                 referencedColumnNames="id"
                                 referencedTableName="endereco"/>

        <addForeignKeyConstraint baseColumnNames="funcionario_id"
                                 baseTableName="pessoa"
                                 constraintName="fk_pessoa_funcionario_id"
                                 referencedColumnNames="id"
                                 referencedTableName="funcionario"/>

        <addForeignKeyConstraint baseColumnNames="juridica_id"
                                 baseTableName="pessoa"
                                 constraintName="fk_pessoa_juridica_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cliente_pessoa_juridica"/>

    </changeSet>
</databaseChangeLog>
